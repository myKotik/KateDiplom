<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ScrollView
        android:id="@+id/SV1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BN"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:onClick="btnActTwo"
                    >

                    <TextView
                        android:id="@+id/name"
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Бейгл с омлетом" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="210₽" />

                    <Button
                        android:id="@+id/btnadd"
                        style="@style/btn_blck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:onClick="goNewView"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Брускетта с креветками" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="345₽" />

                    <Button
                        android:id="@+id/btnadd1"
                        style="@style/btn_blck"
                        android:onClick="goNewView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Классический чизбургер" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="335₽" />

                    <Button
                        android:id="@+id/btnadd2"
                        style="@style/btn_blck"
                        android:onClick="goNewView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Бейгл с омлетом" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="210₽" />

                    <Button
                        style="@style/btn_blck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Брускетта с креветками" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="345₽" />

                    <Button
                        style="@style/btn_blck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/food3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Классический чизбургер" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="335₽" />

                    <Button
                        style="@style/btn_blck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:text="Добавить" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/BN"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff"
        android:orientation="horizontal"
        >
<Button
    android:id="@+id/foodF"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/fastfood"
    android:layout_marginStart="70dp"
    />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_shopping_basket_24"
            android:layout_marginStart="70dp"
            android:onClick="Basket"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/profile"
            android:layout_marginStart="70dp"
            android:onClick="profile"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>